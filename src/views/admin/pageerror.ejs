        }

        .sidebar .menu-link {
            text-decoration: none;
            color: #ecf0f1;
            font-size: 14px;
            padding: 12px 10px;
            display: flex;
            align-items: center;
            border-radius: 8px;
            transition: background 0.3s, color 0.3s;
        }

        .sidebar .menu-link i {
            margin-right: 10px;
            font-size: 16px;
        }

        .sidebar .menu-link:hover,
        .sidebar .menu-link.active {
            background: #3498db;
            color: #fff;
        }

        /* Navbar */
        .navbar {
            height: 60px;
            background: #ffffff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            position: fixed;
            left: 220px;
            right: 0;
            z-index: 1000;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .navbar .logout-btn {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .navbar .logout-btn button {
            background: #3498db;
            color: #fff;
            border: none;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .navbar .logout-btn button:hover {
            background: #2980b9;
        }

        .navbar .user-icon {
            font-size: 20px;
            color: #2c3e50;
        }

        /* Main Content */
        .main-content {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin-left: 220px;
            margin-top: 60px;
        }

        .error-card {
            max-width: 600px;
            background: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .error-card h3 {
            margin-bottom: 20px;
            font-size: 40px;
            color: #e74c3c;
            font-weight: bold;
        }

        .error-card p {
            font-size: 18px;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        .error-card a {
            font-size: 16px;
            color: #3498db;
            text-decoration: none;
            transition: color 0.3s;
        }

        .error-card a:hover {
            color: #2980b9;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 15px 0;
            background: #ffffff;
            color: #2c3e50;
            position: fixed;
            bottom: 0;
            left: 220px;
            right: 0;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.05);
        }

        /* Responsive */
        @media screen and (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .navbar {
                left: 0;
                right: 0;
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }
        }
