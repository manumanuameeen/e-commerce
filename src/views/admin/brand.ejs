<%- include('../partials/admin/header') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Brands</h2>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Add Brand Form -->
                    <div class="col-md-3">
                        <form action="/admin/addBrand" method="post" enctype="multipart/form-data">
                            <div class="mb-4">
                                <label for="brandName" class="form-label">Brand Name</label>
                                <input type="text" name="name" id="brandName" placeholder="Enter brand name"
                                    class="form-control" required />
                            </div>

                            <div class="mb-4">
                                <label for="brandImage" class="form-label">Brand Image</label>
                                <div class="input-upload">
                                    <img src="/img/placeholder.png" id="imagePreview" alt="Preview"
                                        style="max-width: 100px; margin-bottom: 10px;" />
                                    <input class="form-control" type="file" id="brandImage" name="image"
                                        accept="image/*" onchange="previewImage(event)" required />
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Add Brand</button>
                            </div>
                        </form>
                    </div>

                    <!-- Brands Table -->
                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Brand Name</th>
                                        <th>Logo</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (data && data.length> 0) { %>
                                        <% data.forEach(brand=> { %>
                                            <tr>
                                                <td>
                                                    <%= brand.name %>
                                                </td>
                                                <td>
                                                    <div class="brand-logo">
                                                        <img src="/upload/re-image<%= brand.brandImage[0] %>"
                                                            alt="<%= brand.brandName%>"
                                                            style="width: 40px; height: 40px; object-fit: contain;" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (brand.isBlocked) { %>
                                                        <span class="badge rounded-pill alert-danger">Blocked</span>
                                                        <% } else { %>
                                                            <span class="badge rounded-pill alert-success">Active
                                                                </sunpan>
                                                                <% } %>
                                                </td>
                                                <td class="text-end">
                                                    <% if (brand.isBlocked) { %>
                                                        <a href="/admin/brand/unblock/<%= brand._id %>"
                                                            class="btn btn-success">Unblock</a>
                                                        <% } else { %>
                                                            <a href="/admin/brand/block/<%= brand._id %>"
                                                                class="btn btn-warning">blocked</a>
                                                            <% } %>
                                                                <button class="btn btn-danger"
                                                                    onclick="confirmDelete('<%= brand._id %>')">
                                                                    Delete
                                                                </button>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="4" class="text-center">No brands found</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages> 1) { %>
                            <div class="pagination-container mt-4">
                                <div class="pagination">
                                    <% for(let i=1; i <=totalPages; i++) { %>
                                        <% if (i===currentPage) { %>
                                            <span class="current-page">
                                                <%= i %>
                                            </span>
                                            <% } else { %>
                                                <a href="/admin/brand?page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                                <% } %>
                                                    <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const preview = document.getElementById('imagePreview');
                preview.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }

        function confirmDelete(brandId) {
            if (confirm('Are you sure you want to delete this brand?')) {
                window.location.href = `/admin/brand/delete/${brandId}`;
            }
        }
    </script>