    <style>
        .feature_part {
            padding: 60px 0;
            background-color: #ffffff;
        }
        
        .section_tittle h2 {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 40px;
        }
        
        .featured-product-card {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 10px;
            height: 100%;
            position: relative;
            overflow: hidden;
        }
        
        .premium-tag {
            color: #ff3368;
            text-transform: uppercase;
            font-size: 14px;
            margin-bottom: 10px;
            font-weight: 500;
        }
        
        .product-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #2a2a2a;
        }
        
        .feature-link {
            display: inline-block;
            color: #ff3368;
            text-decoration: none;
            text-transform: uppercase;
            font-weight: 500;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }
        
        .feature-link:hover {
            color: #e61e4d;
        }
        
        .product-image-wrapper {
            width: 100%;
            overflow: hidden;
        }
        
        .product-image-wrapper img {
            width: 100%;
            height: auto;
            transition: transform 0.3s ease;
            object-fit: cover;
        }
        
        .featured-product-card:hover .product-image-wrapper img {
            transform: scale(1.05);
        }
        
        /* Ensure consistent spacing between cards */
        .mb-4 {
            margin-bottom: 2rem !important;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .col-md-6 {
                margin-bottom: 30px;
            }
            
            .featured-product-card {
                padding: 20px;
            }
        }
       
        .zoom-container {
            position: relative;
            overflow: hidden;
        }

        .zoom-image {
            max-width: 100%;
            transition: transform 0.3s ease;
        }

        .zoomed {
            position: relative;
            z-index: 1000;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 0px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            right: 0;
        }


        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: white;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header {
            position: relative;
            z-index: 500;
        }

        .header__nav__option .sign-in-link {
            font-size: 16px;
            color: #333;
            margin-right: 15px;
            text-decoration: none;
            font-weight: 600;
        }

        .header__nav__option .sign-in-link:hover {
            color: #ff7f50;
        }

        .user-name {
            margin-right: 10px;
            padding-left: 5px;
            font-weight: 600;
            color: #333;
            font-size: 16px;
        }

        .dropdown-menu {
            right: 0;
        }

        .dropdown-toggle {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .navbar-icons {
  display: flex;
  align-items: center;
  gap: 10px; /* Adjust spacing between icons */
}

.navbar-icons svg, .navbar-icons img {
