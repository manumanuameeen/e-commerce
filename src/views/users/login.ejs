<%- include('../partials/users/header') %>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #ffffff;
        color: #000000;
    }

    .header-section {
       text-align: center;
        padding: 80px 0;
        background-color: #ffffff;
    }

    .header-section h1 {
        font-size: 36px;
        margin-bottom: 10px;
    }

    .header-section p {
        color: #000000;
        font-size: 16px;
    }

    .login-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
        display: flex;
        justify-content: space-between;
        gap: 40px;
    }

    .signup-section, .login-section {
        flex: 1;
        padding: 40px;
        border: 1px solid #000000;
        border-radius: 8px;
        text-align: center;
    }

    .signup-section h2, .login-section h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .signup-section p {
        margin-bottom: 30px;
        color: #000000;
    }

    .button {
        display: inline-block;
        padding: 12px 30px;
        border: 1px solid #000000;
        border-radius: 5px;
        text-decoration: none;
        color: #ffffff;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .button1 {
        border-radius: 5px;
    background-color: #ffffff; /* White background */
    color: #000000; /* Black text */
    border: 1px solid #000000; /* Optional: Add a black border */
    padding: 10px 20px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
}

.button1:hover {
    background-color: #000000; /* Black background on hover */
    color: #ffffff; /* White text on hover */
}

/* If you still want a "filled" version */
.button1.filled {
    background-color: #ffffff; /* White background */
    color: #000000; /* Black text */
}

.button1.filled:hover {
    background-color: #000000; /* Black background on hover */
    color: #ffffff; /* White text on hover */
}


    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #000000;
        border-radius: 5px;
        font-size: 14px;
    }

    .form-footer {
        margin-top: 20px;
        text-align: center;
    }

    .form-footer a {
        color: #000000;
        text-decoration: none;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid #000000;
        border-radius: 5px;
        background-color: #ffffff;
        color: #cb0808;
    
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }
        
        .signup-section, .login-section {
            width: 100%;
        }
    }
    .button2 {
    background-color: #007bff; /* Blue background */
    color: #ffffff; /* White text */
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s;
    border-radius: 5px; /* Rounded corners */
    padding: 10px 20px;
}

.button2:hover {
    background-color: #0056b3; /* Darker blue on hover */
    color: #ffffff; /* White text */
}

/* Filled version */
.button2.filled {
    background-color: #000000; /* Green background */
    color: #ffffff; /* White text */
}

.button2.filled:hover {
    background-color: #62636c; /* Darker green on hover */
    color: #ffffff;
}

</style>

<div class="header-section">
    <hr style="border: 1px solid ; width: 100%; color: #000000;">

    <br><br><br><br><br>
    <h1 style="text-align: center;">Login</h1>
    <p style="color: #62636c;">
        <a href="/" style="color: inherit; text-decoration: none;">Home</a> - Login
    </p> 
</div>


<div class="login-container">
    <div class="signup-section">
        <br><br><br><br><br>
        <h2>New to our Shop?</h2>
        <p>Don't have an account yet? Create one to enjoy our latest offers and features!</p>
        <a href="/signup" class="button1" >Create an Account</a>
    </div>

    <div class="login-section">
        <h2>Welcome Back!<br>Please Login to Your Account</h2>
        <form action="/login" method="POST" novalidate="novalidate">
            <% if (locals.message && message.length > 0) { %>
                <div class="alert">
                    <%= message %>
                </div>
            <% } %>
            
            <div class="form-group">
                <input type="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <!-- <label>
                    <input type="checkbox" name="remember"> Remember Me
                </label> -->
            </div>
            <button type="submit" class="button2 filled" >Login</button>
            <div class="form-footer">
                <a href="/forgot-password">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/users/footer') %>