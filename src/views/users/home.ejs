    <!-- feature_part start-->
    <section class="feature_part padding_top">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8">
                    <div class="section_tittle text-center">
                        <h2>Featured Category</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <% if (products && products.length > 0) { %>
                    <% products.forEach((product, index) => { %>
                        <div class="col-md-6 mb-4">
                            <div class="featured-product-card">
                                <p class="premium-tag">Premium Quality</p>
                                <h3 class="product-title">Latest <%= product.category ? product.category.name : 'Foam Sofa' %></h3>
                                <a href="/productDetails?id=<%= product._id %>">
                                    EXPLORE NOW <i class="fas fa-play"></i>
                                </a>
                                <div class="product-image-wrapper">
                                    <% if (product.productImage && product.productImage.length > 0) { %>
                                       <a href="/productDetails?id=<%=product._id%>"> <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="Product Image"></a>
                                    <% } else { %>
                                        <img src="/path/to/default-image.jpg" alt="Default Product Image">
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p>No products available</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
    
